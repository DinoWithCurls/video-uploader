# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/video-uploader

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# Storage Mode: 'local' for development (stores videos locally), 'cloudinary' for production (uses Cloudinary)
# Use 'local' to avoid Cloudinary API calls during development and testing
STORAGE_MODE=local

# Cloudinary Configuration (only required if STORAGE_MODE=cloudinary)

# File Upload Configuration
MAX_FILE_SIZE=524288000

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
